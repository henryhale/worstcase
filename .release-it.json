{
    "git": {
        "tagName": "v${version}",
        "commitMessage": "chore(release): v${version}",
        "requireBranch": "master",
        "changelog": "pnpm exec auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs"
    },
    "changelogFile": "CHANGELOG.md",
    "github": {
        "release": true,
        "releaseName": "worstcase v${version}",
        "autoGenerate": true,
        "assets": ["dist/", "README.md", "LICENSE.txt"],
        "comments": true
    },
    "npm": {
        "publish": true,
        "skipChecks": true
    },
    "hooks": {
        "before:init": "git fetch --tags"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md",
            "header": "# Changelog",
            "preset": {
                "name": "conventionalcommits"
            },
            "gitRawCommitsOpts": {
                "merges": null
            }
        }
    }
}
